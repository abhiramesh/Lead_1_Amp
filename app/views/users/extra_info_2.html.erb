<div class="container bgimg" align="center">
	<img src="/assets/logo.png" class="logo">
	<div class="formimg">
		<div class="form-heading">
			Do You Qualify for Benefits?
		</div>
		<div class="progress">
			<div class="bar" style="width:10%;"></div>
		</div>
		<%= form_for @user do |f| %>
			<%= f.label :loan, 'Do you need help paying off student loans?' %>
			<%= f.select :loan, options_for_select(loan_options), :onchange => ("$('.edit_user').submit()") %>
			<div id="newsubmit1"/>
			<%= f.submit "Submit >>", :class => "submit" %> 
		<% end %>
	</div>
</div>
<div class="box-background">
	<div class="box-title">
		Receive a <span class="box-free">FREE</span> disability guide
	</div>
	<div class="box-learn">
		Learn:
	</div>
	<div class="box-desc">
		How to <span class="box-bold">qualify</span> for disability
	</div>
	<div class="box-desc">
		How to <span class="box-bold">apply</span> for disability
	</div>
	<div class="box-desc">
		How to <span class="box-bold">not be denied</span> your benefits
	</div>
</div>
